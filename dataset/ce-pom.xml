        <pulsar.version>2.4.1</pulsar.version>
        <javatuples.version>1.2</javatuples.version>
        <commons.codec.version>1.11</commons.codec.version>
        <git-code-format-maven-plugin.version>2.4</git-code-format-maven-plugin.version>


        <!-- control plugins and features -->
        <jooq.skip>true</jooq.skip>
        <!--protoc.skip>true</protoc.skip-->
        <!-- possible values : dont, generate-sources, compile, test-compile -->
        <gfmt.insatll-hook>initialize</gfmt.insatll-hook>
        <gfmt.validate>compile</gfmt.validate>
        <gfmt.format>dont</gfmt.format>
        <gfmt.format_tests>dont</gfmt.format_tests>


        <!--
          Aliases for all external env-vars
          Please add an alias for each env-var which you are using
          here, and only use the alias.
          By this list we'll be able to have a catalog of all possible config vals
        -->

        <db.url>${env.PG_JDBC_URI}</db.url>
        <db.user>${env.PG_USER}</db.user>
        <db.pass>${env.PG_PASSWORD}</db.pass>

        <mvn.release>${env.MVN_REPOSITORY_RELEASE}</mvn.release>
        <mvn.snapshot>${env.MVN_REPOSITORY_SNAPSHOT}</mvn.snapshot>

