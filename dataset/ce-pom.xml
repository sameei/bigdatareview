                    <version>3.0.0-M3</version>
                </plugin>
                <plugin>
                    <artifactId>maven-install-plugin</artifactId>
                    <version>3.0.0-M1</version>
                </plugin>
                <plugin>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <version>3.0.0-M1</version>
                </plugin>
                <plugin>
                    <artifactId>maven-help-plugin</artifactId>
                    <version>3.2.0</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <profiles>
        <profile>
            <id>look-for-postgres-envars</id>
            <activation>
                <property>
                    <name>!env.PG_JDBC_URI</name>
                </property>
            </activation>
            <properties>
                <env.PG_JDBC_URI>jdbc:postgresql://localhost:5555/ce</env.PG_JDBC_URI>
                <env.PG_USER>ce_webapp</env.PG_USER>
                <env.PG_PASSWORD>ce_webapp_password</env.PG_PASSWORD>
            </properties>
        </profile>
        <profile>
            <id>look-for-repository-release-envars</id>
            <activation>
                <property>
                    <name>!env.MVN_REPOSITORY_RELEASE</name>
                </property>
            </activation>
            <properties>
                <env.MVN_REPOSITORY_RELEASE>http://localhost:8080/repository/internal</env.MVN_REPOSITORY_RELEASE>
            </properties>
        </profile>
        <profile>
            <id>look-for-repository-snapshot-envars</id>
            <activation>
                <property>
                    <name>!env.MVN_REPOSITORY_SNAPSHOT</name>
                </property>
            </activation>
            <properties>
                <env.MVN_REPOSITORY_SNAPSHOT>http://localhost:8080/repository/snapshots</env.MVN_REPOSITORY_SNAPSHOT>
            </properties>
        </profile>
    </profiles>

