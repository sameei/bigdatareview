    <distributionManagement>
        <repository>
            <id>mavenrepo.internal</id>
            <name>Internal Release &amp; Mirror Repository</name>
            <url>${mvn.release}</url>
        </repository>
        <snapshotRepository>
            <id>mavenrepo.snapshots</id>
            <name>Internal Snapshot Repository</name>
            <url>${mvn.snapshot}</url>
        </snapshotRepository>
    </distributionManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>com.cosium.code</groupId>
                <artifactId>git-code-format-maven-plugin</artifactId>
                <version>${git-code-format-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <id>install-formatter-hook</id>
                        <phase>${gfmt.insatll-hook}</phase>
                        <goals>
                            <goal>install-hooks</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>format-code-at-compile</id>
                        <goals>
                            <goal>format-code</goal>
                        </goals>
                        <phase>${gfmt.format}</phase>
                    </execution>
                    <execution>
                        <id>format-code-at-test</id>
                        <goals>
                            <goal>format-code</goal>
                        </goals>
                        <phase>${gfmt.format_tests}</phase>
                    </execution>
                    <execution>
                        <id>validate-code-format</id>
                        <phase>${gfmt.validate}</phase>
                        <goals>
                            <goal>validate-code-format</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <googleJavaFormatOptions>
                        <aosp>false</aosp>
                        <fixImportsOnly>false</fixImportsOnly>
                        <skipSortingImports>false</skipSortingImports>
                        <skipRemovingUnusedImports>false</skipRemovingUnusedImports>
                    </googleJavaFormatOptions>
                </configuration>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>3.1.0</version> <!-- Here, instead of 3.1 you had in the question -->
                </plugin>
                <plugin>
                    <artifactId>maven-jar-plugin</artifactId>
